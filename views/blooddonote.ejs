 <main>
    <div class="form-aline">
           <div class="form-images">
           <img class="form-image" src="../public/images/p1.png" alt="">
          </div>
          <div class="form-controlle">
              <div class="heading">
                  <h3>Registration From</h3>
              </div>
              <div class="inputs">

                    <form action="/blood/creatnewdonor" method="POST">
                      <label for="fname">Full Name</label>
                      <input type="text" class="inpu" id="fname" name="fullname" placeholder="Enter your full name"  required >
                      <br>
                      <label for="lname">Email</label>
                      <input type="email" class="inpu" id="lname" name="email" placeholder="Enter your email" required>
                      <br>
                      <label for="lname">Phone</label>
                      <input type="number" class="inpu" id="lname" name="phone" placeholder="Enter your phone" minlength="11" maxlength="15" required>
                      <br>
            
                <label for="bloods">Blood Group</label>
                <select id="bloods"  class="inpu" name="bloodgroup" required>
                    <option value="Select blood group">Select blood group</option>
                    <option value="A+">A+</option>
                  <option value="A-">A-</option>
                  <option value="B+">B+</option>
                  <option value="B-">B-</option>
                  <option value="AB+">AB+</option>
                  <option value="AB-">AB-</option>
                  <option value="O+">O+</option>
                  <option value="O-">O-</option>
                </select>
                <br>   
                    <div class="radiobtn">
                     <h3>Gender</h3>
                    <input type="radio" id="male" name="gender"  value="male" >
                    <h6>Male</h6>
                    <input type="radio" id="female" name="gender"  value="female" >
                    <h6>female</h6>
                    <input type="radio" id="other" name="gender"  value="other">
                    <h6>Other</h6>
                     </div>
                      
                      <label for="lname">Address</label>
                      <input type="text"  class="inpu"  id="lname" name="address" placeholder="Your last address" required>
                      <br>
                      <label for="lname">Bio</label>
                      <textarea  class="inpu"  name="textareas" placeholder="What is your dio" required
                       ></textarea> 
                    
                      <br>
                      <input type="submit" value="Submit">
                    </form>
            
              </div>
